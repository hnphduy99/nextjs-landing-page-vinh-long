// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Province {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  title        String
  subtitle     String
  description  String        @db.Text
  imageUrl     String?
  destinations Destination[]
  specialties  Specialty[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Destination {
  id              String   @id @default(cuid())
  provinceId      String
  province        Province @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  name            String
  slogan          String?
  category        String?
  description     String   @db.Text
  longDescription String?  @db.Text
  imageUrl        String
  gallery         String[]
  highlights      String[]
  experiences     String[]
  tips            String?  @db.Text
  order           Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Specialty {
  id          String   @id @default(cuid())
  provinceId  String
  province    Province @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  name        String
  category    String // 'fruit' or 'dish'
  description String   @db.Text
  imageUrl    String
  origin      String?
  taste       String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HistoricalMilestone {
  id          String   @id @default(cuid())
  year        String
  title       String
  description String   @db.Text
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NotablePersonality {
  id          String   @id @default(cuid())
  name        String
  title       String
  achievement String?
  period      String?
  description String   @db.Text
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CulturalFeature {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  icon        String?
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Festival {
  id          String   @id @default(cuid())
  name        String
  tagline     String?
  description String   @db.Text
  imageUrl    String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Stat {
  id          String   @id @default(cuid())
  label       String
  value       String
  unit        String?
  icon        String?
  description String?  @db.Text
  category    String   @default("general") // "general", "modern", "stats"
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text
}
